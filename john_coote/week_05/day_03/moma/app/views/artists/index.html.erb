<h1>All Artists</h1>

<% @artists.each do |artist| %>

<%= image_tag(artist.image, :class => 'thumb') %>
<ul>
  <li><%= link_to artist.name, artist_path(artist.id)  %></li>
  <!-- min code would be
  link_to artist.name artist_path(artist) or
  link_to artist.name artist -->
  <li><%= artist.nationality %></li>
  <li><%= artist.dob.strftime '%A %B %e %Y' unless artist.dob.nil? %></li>
  <li><%= artist.period %></li>
</ul>

  <% end  %>
