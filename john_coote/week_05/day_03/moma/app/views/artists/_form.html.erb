
<%= form_for @artist do |f| %>

<fieldset>
  <%= f.label :name %>
  <%= f.text_field :name %>
</fieldset>
<fieldset>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
</fieldset>
<fieldset>
  <%= f.label :dob, "Date of Birth" %>
  <%= f.text_field :dob, :required => true, :placeholder => 'yyyy-mm-dd'%>
</fieldset>
<fieldset>
  <%= f.label :period %>
  <%= f.text_field :period %>
</fieldset>
<fieldset>
  <%= f.label :image  %>
  <%= f.text_field :image  %>
</fieldset>
<fieldset>
<label></label>
  <%= f.submit %>
</fieldset>
<% end %>
